<p>We're editing {{model.chef.name}}!</p>

<p>Name: {{input value=model.chef.name}}</p>
<p>Description: {{textarea value=model.chef.description class="medium-text-area"}}</p>
<p>{{input type="checkbox" name="hasCulinaryDegree" checked=model.chef.hasCulinaryDegree}} Has Culinary Degree?</p>

{{#if model.chef.hasCulinaryDegree}}
<p>
Culinary School Attended: {{input value=model.chef.culinarySchoolAttended}}
</p>
{{/if}}
<p>Image URL: {{input value=model.chef.imageUrl}}</p>

{{icon-image model.chef.imageUrl left=true}}
<br>
{{#x-select value=model.chef.restaurant.content on-change=(action "selectRestaurant") as |xs| }}
  {{#each model.restaurants as |restaurant|}}
    {{#xs.option value=restaurant}}{{restaurant.name}}{{/xs.option}}
  {{/each}}
{{/x-select}}
<br>
<button {{action 'save'}}>Save</button>
